/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    void visit(TreeNode* root, double target,double & min,int & ans)
    {
        if(root==NULL)
        {
            return;
        }
        if(abs(target-root->val)<=min)
        {
            if(abs(target-root->val)==min)
            {
                if(ans>root->val)
                {
                    min=abs(target-root->val);
                    ans=root->val;
                }
                else
                {
                    ans=ans;
                }
            }
            else
            {
                 min=abs(target-root->val);
                 ans=root->val;

            }

        }
        visit(root->left,target,min,ans);
        visit(root->right,target,min,ans);
    }
    int closestValue(TreeNode* root, double target) {
        double min=INT_MAX;
        int ans=0;
        visit(root,target,min,ans);
        return ans;
    }
};
