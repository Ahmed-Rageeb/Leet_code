class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        map<char,int>m;
        int start=0;
        int maxi=0;
        for(int i=0;i<s.length();i++)
        {
            if(m.find(s[i])!=m.end() && m[s[i]]>=start)
            {
               start=m[s[i]]+1;
            }
            m[s[i]]=i;
            maxi=max(maxi,i-start+1);
        }
        return maxi;
    
    }
};
