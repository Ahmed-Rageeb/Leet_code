class Solution {
public:
    vector<bool> kidsWithCandies(vector<int>& candies, int extraCandies) {
        int maxi=*std::max_element(candies.begin(),candies.end());
        vector<bool>v(candies.size(),false);
        int i=0;
        for(auto can:candies)
        {
            if(can+extraCandies>=maxi)
            {
                v[i]=true;
            }
            i++;
        }
        return v;
    }
};
